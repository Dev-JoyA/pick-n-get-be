{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",          
    "rootDir": "./",
    "outDir": "dist",
    "esModuleInterop": true,     
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
  
  },
  "include": ["server.ts", "src/**/*"],
  "ts-node": {
    "esm": true 
  }
}

