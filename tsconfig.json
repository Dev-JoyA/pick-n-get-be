{
  "compilerOptions": {
    "module": "NodeNext",          
    "moduleResolution": "NodeNext", 
    "target": "ES2022",         
    "rootDir": "./",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,  
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  
  },
  "include": ["server.ts", "src/**/*"],
  "ts-node": {
    "esm": true 
  }
}

